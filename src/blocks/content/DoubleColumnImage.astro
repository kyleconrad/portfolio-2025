---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import { headlineOptions } from "../../lib/contentful";

import Image from '../../components/Image.astro';

const { content } = Astro.props;
---
<figure class="doublecolumn padding-left--80 padding-right--80 mobile-padding-left--40 mobile-padding-right--40 grid--columns grid--columns--with-caption">
    <div class="grid--columns__sidebar colophon text--gray">
        { ( content.caption ) &&
            <figcaption set:html={ documentToHtmlString( content.caption.json, headlineOptions ) } class="sticky" />
        }
    </div>

    <div class="grid--columns__column doublecolumn__row">
        <div class="doublecolumn__row__image rounded overflow--hidden">
            <Image image={ content.leftImage } />
        </div>

        <div class="doublecolumn__row__image rounded overflow--hidden">
            <Image image={ content.rightImage } />
        </div>
    </div>
</figure>