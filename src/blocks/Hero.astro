---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import { headlineOptions } from "../lib/contentful";

import Navigation from '../components/Navigation.astro';

const { name, client, headline, navigation } = Astro.props;

const headlineRender = documentToHtmlString( headline.json, headlineOptions ).replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&quot;/g, '"');
---
<header class="hero padding-top--40 padding-left--80 padding-right--80 padding-bottom--80 mobile-padding-left--40 mobile-padding-right--40 text--black">
    <Navigation name={ name } navigation={ navigation }/>

    <h1 class="h1 hover-emoji">
        <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 48 48" class="hero__logo">
            <rect class="fill--accent" width="48" height="48"/>
            <path class="fill--none stroke--white" d="M34.6,29.8s-4.1-6-10.6-6-10.6,6-10.6,6"/>
            <path class="fill--none stroke--white" d="M34,28.7s-2.9,2.4-5.1,4.1c-1.8,1.4-3.7,1.8-4.9,1.8h0c-1.2,0-3-.4-4.9-1.8-2.2-1.7-5.1-3.9-5.1-3.9"/>
            <path class="fill--none stroke--white" d="M25.6,28.3c0,.9-.7,1.6-1.6,1.6s-1.6-.7-1.6-1.6.7-1.6,1.6-1.6,1.6.7,1.6,1.6Z"/>
            <path class="fill--none stroke--white" d="M28.4,28.3c0,2.5-2,4.5-4.4,4.5s-4.4-2-4.4-4.5,2-4.5,4.4-4.5,4.4,2,4.4,4.5Z"/>
            <path class="fill--none stroke--white" d="M37.1,27s-5-6.3-13-6.3-13,6.3-13,6.3"/>
            <path class="fill--none stroke--white" d="M17.3,37c-2.5-1.7-5.7-3.9-5.7-3.9"/>
            <path class="fill--none stroke--white" d="M36.5,33.1s-3.2,2.1-5.7,3.9"/>
            <path class="fill--none stroke--white" d="M9.4,37l14.6-26,14.6,26H9.4Z"/>
        </svg>

        { ( client ) &&
            <strong>{ client }:</strong>
        }

        <span set:html={ headlineRender } />
    </h1>
</header>