---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import { copyOptions } from "../lib/contentful";

import Navigation from '../components/Navigation.astro';

const { navigation } = Astro.props;
---
<footer class="footer padding--80">
    <Navigation name="true" navigation={ navigation.navigationLinks }/>

    <div set:html={ documentToHtmlString( navigation.footerColophon.json, copyOptions ) } class="colophon text--gray" />
</footer>