---
// @ts-nocheck

import { imageResponsive } from "../lib/contentful";

const { image } = Astro.props;

const imageSrcset = imageResponsive( image.url, image.width );
---
<picture nopin="nopin">
    <source
        type="image/avif"
        srcset={ imageSrcset.avif }
        sizes={ imageSrcset.sizes }
    />
    <source
        type="image/webp"
        srcset={ imageSrcset.webp }
        sizes={ imageSrcset.sizes }
    />
    <img
        srcset={ imageSrcset.srcset }
        sizes={ imageSrcset.sizes }
        src={ image.url }
        width={ image.width }
        height={ image.height }
        alt={ image.description }
        decoding="async"
        loading="lazy"
        nopin="nopin"
    />
</picture>